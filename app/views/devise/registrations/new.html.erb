<!-- Styles for Elements exclusive to this View -->
<style>

  /* Background */
  body {
    background-image: url("http://i.imgur.com/3nSsUn5.png");
    background-repeat: no-repeat;
    background-size: cover;
    background-attachment: fixed;
  }

  /* Colored Cards */
  .demo-card-event > .mdl-card__actions {
    border-color: rgba(255, 255, 255, 0.2);
  }

  .demo-card-event > .mdl-card__title {
    align-items: flex-start;
  }

  .demo-card-event > .mdl-card__title > h4 {
    margin-top: 0;
  }

  .demo-card-event > .mdl-card__actions {
    display: flex;
    box-sizing:border-box;
    align-items: center;
  }

  .demo-card-event > .mdl-card__actions > .material-icons {
    padding-right: 10px;
  }

  .demo-card-event > .mdl-card__title,
  .demo-card-event > .mdl-card__actions,

  .demo-card-event > .mdl-card__actions > .mdl-button {
    color: #fff;
  }
  
</style>

<html>
  <body>
    <div class="mdl-grid">

      <!-- Welcome Card -->
      <div class="mdl-cell mdl-cell--8-col">
        <div class="demo-card-event mdl-card mdl-shadow--2dp" style="width:auto; background:#673AB7; height:650px">
          <div class="mdl-card__title mdl-card--expand">
            <h4> Welcome to Wish.IO

              <!-- I am going to design some imagery to put here -->
              <br>
              <br>
              <br>
              <br>
              <br>
              <br>
              <br>
              <br>
              <br>
              <br>
              <br>
              <br>
              <br>
              <br>
              <br>

            </h4>
          </div>
          <div class="mdl-card__actions mdl-card--border">
            <a class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect">
              Our Mission
            </a>
            <div class="mdl-layout-spacer"></div>
          </div>
        </div>
      </div>

      <!-- Sign Up Card -->
      <div class="mdl-cell mdl-cell--4-col">

        <!-- Begin Sign Up Form -->
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

        <div class="demo-card-wide mdl-card mdl-shadow--2dp"style="width:auto">
          <div class="mdl-card__title">
            <h2 class="mdl-card__title-text" style="color:#000000">
              Sign Up
            </h2>
          </div>
          <div class="mdl-card__supporting-text">

            <!-- Email Field -->
            <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
              <%= f.label :Email, :class => 'mdl-textfield__label' %>
              <%= f.email_field :email, autofocus:true, :class => 'mdl-textfield__input'%>
            </div>
            <br>

            <!-- Password Field -->
            <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
              <%= f.label :password,  :class => 'mdl-textfield__label'%>
              <%= f.password_field :password, autocomplete: "off" , :class => 'mdl-textfield__input'%>
            </div>
            <br>

            <!-- Password Confirmation Field -->
            <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
              <%= f.label :password_confirmation, :class => 'mdl-textfield__label' %>
              <%= f.password_field :password, autocomplete: "off", :class => 'mdl-textfield__input'%>
            </div>

          </div>
          <div class="mdl-card__actions mdl-card--border">
            <div style="display:inline">
              <%= f.submit "Sign up", :class => 'mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect'%>
            </div>
            <%= render "devise/shared/links" %>

            <!-- End Sign Up Form -->
            <% end %>
          </div>

        </div>

        <!-- FAQ Card -->
        <div class="demo-card-event mdl-card mdl-shadow--2dp" style="background:#B99AFE;margin-top:3.7%; width:100%;height:282.45px" >
          <div class="mdl-card__title mdl-card--expand">
            <h4>
              Keep everything
              <br>
              in one place
              <!-- I am going to design some imagery to put here -->
              <br>
              <br>
              <br>
              <br>
            </h4>
          </div>
          <div class="mdl-card__actions mdl-card--border">
            <a class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect">
              Learn More
            </a>
            <div class="mdl-layout-spacer">
            </div>
            <div class="mdl-button mdl-button--icon">
              <i class="material-icons">explore</i>
            </div>
          </div>
        </div>
      </div>

      <!-- Description Card -->
      <div class="mdl-cell mdl-cell--12-col">
        <div class="demo-card-wide mdl-card mdl-shadow--2dp" style="width:auto">
          <div class="mdl-card__title">
            <h2 class="mdl-card__title-text" style="color:#000000">
              A universal online shopping wish list
            </h2>
          </div>
          <div class="mdl-card__supporting-text">

            <!-- I am going to write something to put here -->
            Lorem ipsum dolor sit amet, consectetur adipiscing elit.
