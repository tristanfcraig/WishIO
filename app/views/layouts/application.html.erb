<!DOCTYPE html>
<html>

  <head>

    <title>WishIO</title>

    <!--Basic StyleSheet-->
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>

    <!--Material Design Elements-->
    <%= stylesheet_link_tag "https://fonts.googleapis.com/icon?family=Material+Icons" %>
    <link rel="stylesheet" href="https://code.getmdl.io/1.1.3/material.deep_purple-purple.min.css">

    <%= csrf_meta_tags %>

    <!--User Layout-->
    <% if user_signed_in? %>

    <!-- Fixed Header -->
    <div class="mdl-layout mdl-js-layout mdl-layout--fixed-header">
      <header class="mdl-layout__header">
        <div class="mdl-layout__header-row">

          <!-- Title -->
          <span class="mdl-layout-title">
            <%= yield :title %>
          </span>

          <!-- Add spacer, to align navigation to the right -->
          <div class="mdl-layout-spacer"></div>

          <!-- New Card Button -->
          <span onclick="openNav()">
            <div id="newCardButton">
              <%= link_to new_item_path do %>
                <button id="button" class="mdl-button mdl-js-button mdl-button--icon">
                  <i class="material-icons" style="color:#FFFFFF">add</i>
                </button>
              <%end%>
            </div>
          </span>

          <!-- Display Settings Menu -->
          <button id="demo-menu-lower-right" class="mdl-button mdl-js-button mdl-button--icon">
            <i class="material-icons">more_vert</i>
          </button>

            <!-- Display Settings Menu List-->
            <ul class="mdl-menu mdl-menu--bottom-right mdl-js-menu mdl-js-ripple-effect"
              for="demo-menu-lower-right">
              <li class="mdl-menu__item">Sort</li>
              <%= link_to 'Edit Profile', edit_user_registration_path, :class => 'mdl-menu__item' %>
              <%= link_to "Logout", destroy_user_session_path, method: :delete, :class => 'mdl-menu__item'  %>
            </ul>

        </div>
      </header>

      <!-- Sidebar Menu -->
      <div class="mdl-layout__drawer">
        <span class="mdl-layout-title" style= "background-image: url('http://i.imgur.com/3nSsUn5.png');background-size: cover;">
          <br>
          <br
          <h6 style="color:#FFFFFF; text-align:center; margin-left:-43px"><%= current_user.email %></h6>
        </span>

        <!-- Sidebar Menu List-->
        <nav class="mdl-navigation">
          <a class="mdl-navigation__link" href=""> <i class="material-icons">inbox</i> <span style="padding-left:2em">My List<span></a>
          <a class="mdl-navigation__link" href=""> <i class="material-icons">search</i> <span style="padding-left:2em">Discover<span></a>
          <a class="mdl-navigation__link" href=""> <i class="material-icons">settings</i> <span style="padding-left:2em">Settings<span></a>
        </nav>
      </div>

    <% end %>

  </head>

  <body>
    <%= yield %>
  </body>

</html>
