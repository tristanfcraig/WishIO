<% provide (:title), @item.name %>

<!-- Styles for Elements exclusive to this View -->
<style>

  h4 {
    margin: 0;
    padding: 0;
  }

  h6 {
    margin: 0;
    padding: 0;
  }

  /* Makes hyperlinks display as normal text */
  A {
    color: inherit;
    text-decoration:none
  }

  /* Card Styles */
  .demo-card-wide.mdl-card {
    width: auto;
    max-width: 1400px;
    margin-top: 100px;
    margin-left: 200px;
    margin-right: 200px;
  }

  .demo-card-wide > .mdl-card__title {
    color: #fff;
    height: 176px;
    background: url('../assets/demos/welcome_card.jpg') center / cover;
  }

  .demo-card-wide > .mdl-card__menu {
    color: #000;
  }

</style>

<!-- Creates Card -->
<div class="demo-card-wide mdl-card mdl-shadow--2dp">

  <!-- Sets Background Image of the Card -->
  <div class="mdl-card__title" style="background-image:url(<%= @item.url %>)">
  </div>

  <!-- Accesses Attributes of the specific Card -->
  <div class="mdl-card__supporting-text">
    <h4><%= @item.name %></h4>
    <h6><%= @item.retailer %></h6>
  </div>

  <!-- Card Buttons -->
  <div class="mdl-card__actions mdl-card--border" style ="height:1000px">

    <!-- Find In Store Button does nothing -->
    <button class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect">
    <i class="material-icons">store</i> <span style="padding-left:1em">Find In Store<span>
    </button>

    <!-- Edit Info button calls the Edit Action -->
    <%= link_to edit_item_path(@item) do %>
      <button class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect">
        <i class="material-icons">edit</i> <span style="padding-left:1em">Edit Info<span>
      </button>
    <%end%>

    <!-- Delete Button calls the Destroy Action -->
    <%= link_to @item, method: :delete, data: { confirm: 'Are you sure?' } do %>
      <button class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect">
        <i class="material-icons">delete</i> <span style="padding-left:1em">Delete<span>
      </button>
    <%end%>

    <!-- Product Info -->
    <br><br><br>
    <h4>  <span style="padding-left:1em">Product Info<span> </h4> <br>
      <p> <span style="padding-left:1.7em">The quick brown fox jumps over the lazy dog. <span></p>
  </div>

  <!-- Cancel Button -->
  <div class="mdl-card__menu">
    <%= link_to items_path do%>
    <button class="mdl-button mdl-button--icon mdl-js-button mdl-js-ripple-effect">
      <i class="material-icons">close</i>
    </button>
    <%end%>
  </div>

</div>
